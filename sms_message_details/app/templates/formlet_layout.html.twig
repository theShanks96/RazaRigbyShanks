{% extends 'banner.html.twig' %}
{% block content %}

    <div class="form">

        <div class="tab-content">
            <div id="signup">
                <h1>{{ header_text }}</h1>
                <p>Authorisation Required</p>
                <form action="{{ action_proceed }}" method="{{ method_post }}">
                    <div class="top-row">
                        <div class="field-wrap">
                            <label>
                                Username<span class="req">*</span>
                            </label>
                            <input type="text" name="username" required autocomplete="off"/>
                        </div>

                        <div class="field-wrap">
                            <label>
                                Current Password<span class="req">*</span>
                            </label>
                            <input type="password" name="password" required autocomplete="off"/>
                        </div>
                    </div>

                    <div class="field-wrap">
                        <label>
                            {{ entry_zero }}<span class="req">*</span>
                        </label>
                        <input type="{{ type }}" name="entry_zero" required autocomplete="off"/>
                    </div>

                    <div class="field-wrap">
                        <label>
                            {{ entry_one }}<span class="req">*</span>
                        </label>
                        <input type="{{ type }}" name="entry_one" required autocomplete="off"/>
                    </div>

                    <button type="submit" class="mini-button green-colour button-block">{{ button_text }}</button>

                </form>

                <form action="{{ action_back }}" method="{{ method_post }}">

                    <button type="submit" class="mini-button blue-colour button-block">Go Back</button>

                </form>

            </div>

            <div id="login">
                <form></form>

            </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="../../js/script.js"></script>

    <div class = "w3c-validate">
        <a href="http://validator.w3.org/check?uri=referer">Valid HTML 5 Table Page</a>
        &nbsp;&nbsp;
        <a href="http://jigsaw.w3.org/css-validator/check/referer">Valid CSS Table Page</a>
    </div>
{% endblock %}
